
<%= form_for [@location, @address] do |f| %>
<div class="container">
  <%= f.label :physical_address %>
  <%= f.text_field :physical_address %>
  <br />
  <%= f.label :country %>
  <%= f.text_field :country %>
  <br />
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />
  <div class="black-text"><%= f.submit %></div>
</div>
<% end %>