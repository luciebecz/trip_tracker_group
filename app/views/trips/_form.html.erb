<%= form_for @trip do |f| %>
<div class="container">

<div class="amber-text">
  <%= f.label :trip_name %>
  <%= f.text_field :trip_name %>
</div>

<div class="amber-text">
  <%= f.label :duration %>
  <%= f.text_field :duration %>
</div>

<div class="amber-text">
  <%= f.label :budget %>
  <%= f.number_field :budget %>
</div>

<div class="amber-text">
  <%= f.label :people_going %>
  <%= f.number_field :people_going %>
</div>

<%= f.submit %>

</div>
<% end %>