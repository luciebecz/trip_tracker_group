<%= form_for @trip do |f| %>
<div>
  <%= f.label :trip_name %>
  <%= f.text_field :trip_name %>
</div>

<div>
  <%= f.label :duration %>
  <%= f.text_field :duration %>
</div>

<div>
  <%= f.label :budget %>
  <%= f.number_field :budget %>
</div>

<div>
  <%= f.label :people_going %>
  <%= f.number_field :people_going %>
</div>

<%= f.submit %>

<% end %>