
<h1 class="center"> <%= @trip.trip_name %></h1>


<div class="container">
  <div class="row grey lighten-2">
    <div class="col s12"><h4>Duration</h4><p><%= @trip.duration %></p></div>
  </div>
  <div class="row grey">
    <div class="col s12 m6 l3"><h4>Budget</h4><p><%= @trip.budget %></p></div>
  </div>
  <div class="row grey darken-2">
    <div class="col s12"><h4>Number of People Going</h4><p><%= @trip.people_going %></p></div>
  </div>
  <div class="center">
   <%= link_to 'View Locations', trip_locations_path(@trip), class:'btn cyan white-text'%> 
  
  <%= link_to 'Edit Trip', edit_trip_path(@trip), class:'btn cyan white-text'%>
  
  <%= link_to 'Delete Trip', trip_path(@trip), class:'btn cyan white-text', method: :delete, data: {confirm: 'Really Delete Trip?'} %>
</div>
</div>