<h1 class="center"> <%= @trip.trip_name %>: <%= @location.name %></h1>

  <div class="row teal">
    <div class="col s12 m6 l3"><h5>Description:</h5><p><%= @location.description %></p></div>
  </div>
 
  <div class="center">
    <%= link_to 'Edit Location', edit_trip_location_path(@trip, @location) %>
